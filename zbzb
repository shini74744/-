;不要随意改变关键字，否则会导致出错
;美国和越南分流，基于 LAN 接口的配置模板

;规则标志位设置
ruleset=🎯 全球直连,https://raw.githubusercontent.com/ACL4SSR/ACL4SSR/master/Clash/LocalAreaNetwork.list
ruleset=🎯 全球直连,https://raw.githubusercontent.com/ACL4SSR/ACL4SSR/master/Clash/UnBan.list
ruleset=🛑 广告拦截,https://raw.githubusercontent.com/ACL4SSR/ACL4SSR/master/Clash/BanAD.list
ruleset=📢 美国节点,[]GEOIP,US,no-resolve
ruleset=📢 越南节点,[]GEOIP,VN,no-resolve
ruleset=🎯 全球直连,[]GEOIP,CN,no-resolve
ruleset=🎯 全球直连,[]GEOSITE,CN
ruleset=🐟 漏网之鱼,[]FINAL

;代理分组设置
custom_proxy_group=🚀 节点选择`select`[]🇺🇸 美国节点`[]🇻🇳 越南节点`[]DIRECT
custom_proxy_group=🇺🇸 美国节点`url-test`(US|美国|United States|洛杉矶|硅谷|芝加哥|达拉斯|西雅图)`http://www.gstatic.com/generate_204`300,,50
custom_proxy_group=🇻🇳 越南节点`url-test`(VN|越南|Vietnam|河内|胡志明市)`http://www.gstatic.com/generate_204`300,,50
custom_proxy_group=🛑 广告拦截`select`[]REJECT`[]DIRECT
custom_proxy_group=🐟 漏网之鱼`select`[]🚀 节点选择`[]DIRECT

;LAN 接口分流规则
rules:
  - DOMAIN-SUFFIX,local,DIRECT
  - IP-CIDR,192.168.31.1/24,🇺🇸 美国节点
  - IP-CIDR,192.168.1.1/24,🇻🇳 越南节点
  - MATCH,🐟 漏网之鱼

;规则生成器设置
enable_rule_generator=true
overwrite_original_rules=true
